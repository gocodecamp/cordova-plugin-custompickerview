<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center|bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/touch_rl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#9000"
        android:gravity="bottom">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7F7F7">

            <TextView
                android:id="@+id/cancle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="取消"
                android:textColor="#017AFD"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/confirm_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="确定"
                android:textColor="#017AFD"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="#DCDCDC" />
        </FrameLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center|bottom"
        android:orientation="horizontal">

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/wheel_left_wp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F7F7F7"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_curved="true"
            aigestudio:wheel_cyclic="false"
            aigestudio:wheel_indicator="true"
            aigestudio:wheel_indicator_color="#DCDCDC"
            aigestudio:wheel_indicator_size="1dp"
            aigestudio:wheel_item_space="10dp"
            aigestudio:wheel_item_text_color="#ACACAC"
            aigestudio:wheel_item_text_size="20dp"
            aigestudio:wheel_selected_item_text_color="#2E2E2E"
            aigestudio:wheel_visible_item_count="9" />

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/wheel_center_wp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F7F7F7"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_curved="true"
            aigestudio:wheel_cyclic="false"
            aigestudio:wheel_indicator="true"
            aigestudio:wheel_indicator_color="#DCDCDC"
            aigestudio:wheel_indicator_size="1dp"
            aigestudio:wheel_item_space="10dp"
            aigestudio:wheel_item_text_color="#ACACAC"
            aigestudio:wheel_item_text_size="20dp"
            aigestudio:wheel_selected_item_text_color="#2E2E2E"
            aigestudio:wheel_visible_item_count="9" />

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/wheel_right_wp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F7F7F7"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_curved="true"
            aigestudio:wheel_cyclic="false"
            aigestudio:wheel_indicator="true"
            aigestudio:wheel_indicator_color="#DCDCDC"
            aigestudio:wheel_indicator_size="1dp"
            aigestudio:wheel_item_space="10dp"
            aigestudio:wheel_item_text_color="#ACACAC"
            aigestudio:wheel_item_text_size="20dp"
            aigestudio:wheel_selected_item_text_color="#2E2E2E"
            aigestudio:wheel_visible_item_count="9" />
    </LinearLayout>

</LinearLayout>